                <% if(loggedIn){ %>
                    <li><a href="/admin/new">اضف مقال جديد</a></li>
                <% } %>
            </ul>
        </nav>
            <% if(blogs.length == 0){ %>
            <section>
                <h1>!لا يوجد اخبار في الوقت الحالي</h1>
            <% } %>
            <section class="cards">
            <% blogs.forEach(blog => { %>
                <div>
                    <% if(loggedIn){ %>
                        <a href="/admin/edit/<%= blog._id %>">Edit</a>
                        <a href="/admin/delete/<%= blog._id %>">Delete</a>
                    <% } %>
                    <% if(blog.image){ %>
                        <img src="<%= blog.image %>">
                    <% } else { %>
                        <img src="imgs/Logo.png">
                    <% } %>
                    <h3><a href="/show/<%= blog._id %>"><%= blog.title %></a></h3>
                </div>
            <% }) %>
        </section>
