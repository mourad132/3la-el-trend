    <body>
        <header>
            <h1><%= page %></h1>
            <img src="imgs/Logo.png">
        </header>
        <nav>
            <ul>
                <li><a href="/رياضة">رياضة</a></li>
                <li><a href="/فن">فن</a></li>
                <li><a href="/اخبار">اخبار</a></li>
